<?php
foreach ($this->cocktails as $cocktail){
	$entries[] = array(
		'title'       => $cocktail->name,
		'link'        => $this->url(array(
			'id'		=>$cocktail->id,
			'format'	=>$this->format)),
		'description' => $cocktail->name,
	);

}

// Create the RSS array
$rss = array(
	'title'   => 'cocktailberater',
	'link'    => 'http://www.cocktailberater.de',
	'charset' => 'UTF-8',
	'entries' => $entries
);

// Import the array
$feed = Zend_Feed::importArray($rss, $this->format);
print $feed->saveXML();