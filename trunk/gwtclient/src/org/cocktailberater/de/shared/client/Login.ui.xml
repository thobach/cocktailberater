<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='org.cocktailberater.de.shared.client.Resources' />

	<g:HTMLPanel>
		<div class='{res.style.container}'>
			<g:Image ui:field="header" resource='{res.logo}'></g:Image>
			<div id="header">
				<h1>&nbsp;</h1>
			</div>
			<fieldset class='{res.style.smallContainer}'>
				<legend>Login</legend>
				<g:HTML>
					E-Mail
					<span class='{res.style.required}'>*</span>
					:
				</g:HTML>
				<g:TextBox ui:field="email"></g:TextBox>
				<br />
				<g:HTML>
					Password
					<span class='{res.style.required}'>*</span>
					:
				</g:HTML>
				<g:PasswordTextBox ui:field="password"></g:PasswordTextBox>
				<br />
				<g:Button ui:field="login" />
			</fieldset>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 